<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafinalproject1.admin.controller.TicketController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Edit Ticket" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Route ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtRouteId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtPrice" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Seats:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtSeats" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Update" prefWidth="100" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>
</VBox>