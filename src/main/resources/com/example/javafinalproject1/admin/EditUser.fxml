<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafinalproject1.admin.controller.UserController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Edit User" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtRole" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <Button text="Save Changes" maxWidth="Infinity" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
</VBox>