<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafinalproject1.admin.controller.RouteController">
    <Label text="Routes Management" style="-fx-font-size: 20px; -fx-padding: 10;"/>
    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" />
            <TableColumn fx:id="colFrom" text="From City" />
            <TableColumn fx:id="colTo" text="To City" />
            <TableColumn fx:id="colType" text="Transport Type" />
        </columns>
    </TableView>
    <Button text="Delete Selected Route" onAction="#deleteRoute" style="-fx-background-color: red; -fx-text-fill: white;"/>
    <Button text="Add Route" onAction="#openAddRoute"/>
</VBox>