<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label text="Ticket Form" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TextField fx:id="txtRouteId" promptText="Route ID"/>
    <TextField fx:id="txtPrice" promptText="Price"/>
    <TextField fx:id="txtSeats" promptText="Seats Amount"/>
    <Button text="Save Changes" maxWidth="Infinity"/>
</VBox>